<div id="destinationMenu" {{#if destination.isFavorite}}class="isFavorite"{{/if}}>
  <i class="touchFeedback fa fa-star-o removeFavorite" data-action="unfavorite">Delete favorite</i>
  <i class="touchFeedback fa fa-star addFavorite" data-action="favorite">Add favorite</i>
  <i class="fa fa-share touchFeedback" data-action="share">Share destination</i>
  <i class="fa fa-download touchFeedback" data-action="save">Save destination</i>
  <i class="fa fa-map-marker touchFeedback" data-action="showOnMap">Show on map</i>
  <i class="fa fa-external-link touchFeedback" data-action="openInBrowser">Open in browser</i>
</div>
<nav>
  <i class="back fa fa-chevron-left touchFeedback"></i>
  <div class="searchInput">
    <i class="fa fa-search searchIcon"></i>
    <input id="searchInput" class="search" type="text" placeholder="Search for a destination">
  </div>
  <h1>{{destination.title}}</h1>
  <div class="right">
    <label class="touchFeedback fa fa-search searchBtn" for="searchInput"></label>
    <i class="menu fa fa-ellipsis-v menuBtn touchFeedback"></i>
  </div>
  <ul id="tabs_menu">
    <li class="active touchFeedback">Info</li>
    <li class="touchFeedback">Photos</li>
    <li class="touchFeedback">Videos</li>
    <li class="touchFeedback">Weather</li>
  </ul>
  <div class="loading_status"></div>
</nav>
<div id="destination_tabs">
  <div data-tab-function="wikivoyage" class="content tab" id="wikivoyage_tab">
    <span class="tabNotLoaded"></span>
    <p class="ajax_loading">
      <i class="ajax_spinner fa fa-spinner fa-spin"></i>
    </p>
  </div>
  <div data-tab-function="photos" class="tab" id="photos_tab">
    <span class="tabNotLoaded"></span>
    <p class="ajax_loading">
      <i class="ajax_spinner fa fa-spinner fa-spin"></i>
    </p>
  </div>
  <div data-tab-function="videos" class="tab not_loaded" id="videos_tab">
    <span class="tabNotLoaded"></span>
    <p class="ajax_loading">
      <i class="ajax_spinner fa fa-spinner fa-spin"></i>
    </p>
  </div>
  <div data-tab-function="weather" class="tab" id="weather_tab">
    <span class="tabNotLoaded"></span>
    <p class="ajax_loading">
      <i class="ajax_spinner fa fa-spinner fa-spin"></i>
    </p>
  </div>
</div>

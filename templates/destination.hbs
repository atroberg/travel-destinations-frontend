<nav>
  <i class="back fa fa-chevron-left"></i>
  <h1>{{destination.title}}</h1>
  <div class="right">
    <i class="fa {{#if destination.isFavorite}}fa-star{{else}}fa-star-o{{/if}} favoriteBtn"></i>
    <i class="menu fa fa-ellipsis-v menuBtn"></i>
    <div id="destinationMenu">
      <i class="fa fa-share">Share page</i>
      <i class="fa fa-download">Save page</i>
    </div>
  </div>
  <ul id="tabs_menu">
    <li class="active">Info</li>
    <li>Photos</li>
    <li>Videos</li>
    <li>Weather</li>
  </ul>
  <div class="loading_status"></div>
</nav>
<div id="destination_tabs">
  <div class="content tab" id="wikivoyage_tab">
    <p class="ajax_loading">
      <i class="ajax_spinner fa fa-spinner fa-spin"></i>
    </p>
  </div>
  <div data-tab-function="photos" class="tab" id="photos_tab">
    <p class="ajax_loading">
      <i class="ajax_spinner fa fa-spinner fa-spin"></i>
    </p>
  </div>
  <div data-tab-function="videos" class="tab not_loaded" id="videos_tab">
    <p class="ajax_loading">
      <i class="ajax_spinner fa fa-spinner fa-spin"></i>
    </p>
  </div>
  <div data-tab-function="weather" class="tab" id="weather_tab">
    <p class="ajax_loading">
      <i class="ajax_spinner fa fa-spinner fa-spin"></i>
    </p>
  </div>
</div>
